extends layouts/base.pug 
block base
    section(class="d-flex justify-content-center")
        div(class="container my-5") 
            form(action="/productos", enctype="multipart/form-data", method="post") 
                div(class="mb-3")
                    label(class="form-label", id="inputGroup-sizing-default", for="title") Titulo 
                    input(type="text", name="title", class="form-control", aria-label="Sizing example input", aria-describedby="inputGroup-sizing-default")
                div(class="mb-3")
                    label(class="form-label", id="inputGroup-sizing-default", for="price") Precio $
                    input(type="number", name="price", class="form-control", aria-label="Amount (to the nearest dollar)")
                div(class="mb-3")
                    label(class="form-label", id="inputGroup-sizing-default", for="thumbnail") Foto del Producto 
                    input(type="file", name="thumbnail", class="form-control", aria-label="Sizing example input", aria-describedby="inputGroup-sizing-default")
                div(class="text-center")
                    button(type="submit", class="btn btn-info text-white") Agregar producto 
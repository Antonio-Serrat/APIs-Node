extends layouts/base.pug 
block base
    section 
        div(class="container")
            div(class="row")
                each product in productos
                    div(class="col d-flex justify-content-center")
                        div(class="card ")
                            img(src=product.thumbnail , alt="imagen producto", class="card-img")
                            div(class="card-body")
                                h4(class="card-title")= product.title 
                                h5(class="card-text")= product.price 
                else 
                    div(class="col-12 my-5 text-center")
                        h4(class="title") No se encontraron productos disponibles